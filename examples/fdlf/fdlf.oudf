void velocityDirichletConditions(bcData *bc)
{
  bc->u = 0.0; // x-velocity
  bc->v = 0.0; // y-velocity
// um*3./2.*(1-4.*(y/H)**2)
  bc->w = 0.5; // z-velocity
}

void scalarDirichletConditions(bcData *bc)
{
  const dfloat H = 0.01;
  const dfloat Tin = 10;
  const dfloat term = 300*H/(2*0.025);
  bc->s = term*(3.*((bc->y/H)*(bc->y/H))-2.*((bc->y/H)*(bc->y/H)*(bc->y/H)*(bc->y/H))-39./280.)+Tin; // temperature
}

void scalarNeumannConditions(bcData *bc)
{
  bc->flux = 300; // heat flux
}